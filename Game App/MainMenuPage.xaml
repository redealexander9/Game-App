<Page
    x:Class="Game_App.MainMenuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Game_App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/background image.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Button x:Name="StartGameButton" Content="Start Game" Margin="155,625,0,0" VerticalAlignment="Top" Height="89" Width="382" FontSize="48" Click="StartGameButton_Click" Background="#FF00F0FF" Foreground="#FF0A0A23"/>
        <Button x:Name="HowToPlayButton" Content="How to Play" Margin="963,625,155,0" VerticalAlignment="Top" Height="89" FontSize="48" Click="HowToPlayButton_Click" Background="#FFFF1FAD" Foreground="#FF0A0A23" HorizontalAlignment="Stretch"/>

    </Grid>
</Page>
