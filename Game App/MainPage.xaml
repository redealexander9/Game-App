        <TextBlock x:Name="CountdownText" HorizontalAlignment="Left" Margin="618,114,0,0" TextWrapping="Wrap" Text="3" VerticalAlignment="Top" Width="275" Height="220" RenderTransformOrigin="0.5,0.5" FontSize="150" Foreground="Black" TextAlignment="Center">

        </TextBlock>

    </Grid>


</Page>
